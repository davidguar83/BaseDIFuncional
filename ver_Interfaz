import gi
import conexionBD
from conexionBD import ConexionBD
gi.require_version("Gtk","3.0")
from gi.repository import Gtk
class clase():
    def __init__(ingresar):
        builder = Gtk.Builder()
        builder.add_from_file ("INTERFAZDI.glade")
        sinais = {"on_ingresarcli_clicked": ingresar.on_ingresarcli_clicked,
                  "on_txtdni_activate": ingresar.on_txtdni_activate,
                  "on_txtnombre_activate" : ingresar.on_txtnombre_activate,
                  "on_txtapellidos_activate" : ingresar.on_txtapellidos_activate,
                  "on_txttelefono_activate" : ingresar.on_txttelefono_activate,
                  "on_txtdeuda_activate" : ingresar.on_txtdeuda_activate,
                  "on_ingresarcli_delete_event": Gtk.main_quit}

        builder.connect_signals(sinais)
        VentanaDatos = builder.get_object("VentanaDatos")
        VentanaDatos.show_all()

    def on_ingresarcli_clicked(ingresar, boton):
            dni= ingresar.txtdni.get_text()
            nom=ingresar.txtnombre.get_text()
            ape=ingresar.txtapellidos.get_txt()
            tel=ingresar.txttlefono.get_txt()
            deu=ingresar.txtdeuda.get_txt()
            print(dni,nom,ape,tel,deu)
            baseDatos = ConexionBD("baseDI.dat")











if __name__ == "__main__":
    clase()
    Gtk.main()